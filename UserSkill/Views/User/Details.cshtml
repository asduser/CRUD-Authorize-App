@using UserSkill.Models
@model User

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="col-md-12" style="background: #428BCA; color: #fff; font-style: italic; padding: 10px 0 10px 20px;"> - User Details -</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td> Name </td>
            <td> Age </td>
            <td> Gender </td>
            @if (Request.IsAuthenticated)
            {
                <td> Skills </td>
            }
        </tr>
    </thead>
    <tbody>
        <tr>
            <td> @Model.Name </td>
            <td> @Model.Age </td>
            <td> @Model.Gender </td>
            @if (Request.IsAuthenticated)
            {
                <td>
                    <div align="right"><a href="/User/Edit/@Model.Id" class="right"><i class="glyphicon glyphicon-edit" style="font-size: 18px; margin: 0 30px 0 0;"></i></a></div>
                    <ol>
                        @foreach (var s in Model.Skills)
                        {
                            <li>@s.Name</li>
                        }
                    </ol>
                </td>
            }
        </tr>
    </tbody>
</table>

<p> <a href="/User/Index" class="btn btn-default btn-lg">Go to users</a> </p>